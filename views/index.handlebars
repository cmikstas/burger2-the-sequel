<header class="navBarContainer">
    <div class="container">
        <nav class="navbar navbar-expand-md navbar-light">
            <a href="#" class="navbar-brand text text-dark">
                <h3>Chris Mikstas</h3>
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="index.handlebars">Portfolio</a>
                    </li>
                </ul>
            </div>
        </nav>
    </div>
</header>

<div class="background-image page-content pb-4">
    <div class="container mt-4">
        <div class="row pt-3 rounded pb-0 divBodyColor">
            <div class="col-md-12 d-flex justify-content-center">
                <img src="/assets/img/burger.png" alt="burger photo">
            </div>
            <div class="col-md-12 mt-3 d-flex justify-content-center">
                <h2 class="text-info">Burger Insanity</h2>
            </div>
            <div class="col-md-12 mt-2 d-flex justify-content-center">
                <form>
                    <div class="input-group">
                        <input type="text" class="form-control" id="newBurger" placeholder="Add new burger here...">
                        <button type="submit" id="newBurgerButton" class="btn btn-dark ml-3">Add Burger</button>
                    </div>
                </form>
            </div>
            <div class="col-md-6 my-3 border-right border-dark">
                <div class="col-md-12 d-flex justify-content-center">
                    <h4 class="text-info">Undevoured Burgers</h4>
                </div>
                <div class="col-md-12">
                    <ul>
                        {{#each burgers}}
                            {{#unless devoured}}
                                {{> burgers/notDevouredBurger}}
                            {{/unless}}
                        {{/each}}
                    </ul>
                </div>
            </div>
            <div class="col-md-6 my-3 border-dark">
                <div class="col-md-12 d-flex justify-content-center">
                    <h4 class="text-info">Devoured Burgers</h4>
                </div>
                <div class="col-md-12">
                    <ul>
                        {{#each burgers}}
                            {{#if devoured}}
                                {{> burgers/devouredBurger}}
                            {{/if}}
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<footer id="sticky-footer" class="py-3 text-white-50 footer-all">
    <div class="container text-center">
        <small>Copyright &copy</small>
    </div>
</footer>